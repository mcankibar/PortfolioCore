
<section id="stats" class="stats section">

    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="row gy-4">

            <div class="col-lg-3 col-md-6 d-flex flex-column align-items-center">
                <i class="bi bi bi-link"></i>
                <div class="stats-item">
                    <span data-purecounter-start="0" data-purecounter-end="@ViewBag.ReferansCount" data-purecounter-duration="1" class="purecounter"></span>
                    <p>Referans Sayım</p>
                </div>
            </div><!-- End Stats Item -->

            <div class="col-lg-3 col-md-6 d-flex flex-column align-items-center">
                <i class="bi bi-journal-richtext"></i>
                <div class="stats-item">
                    <span data-purecounter-start="0" data-purecounter-end="@ViewBag.PortfolioCount" data-purecounter-duration="1" class="purecounter"></span>
                    <p>Portfolyo Sayım</p>
                </div>
            </div><!-- End Stats Item -->

            <div class="col-lg-3 col-md-6 d-flex flex-column align-items-center">
                <i class="bi bi-asterisk"></i>
                <div class="stats-item">
                    <span data-purecounter-start="0" data-purecounter-end="@ViewBag.SkillCount" data-purecounter-duration="1" class="purecounter"></span>
                    <p>Yetenek Sayım</p>
                </div>
            </div><!-- End Stats Item -->

            <div class="col-lg-3 col-md-6 d-flex flex-column align-items-center">
                <i class="bi bi-calculator-fill"></i>
                <div class="stats-item">
                    @{
                        Random random = new Random();
                        int randomNumber = random.Next(10, 20);
                    }
                    <span data-purecounter-start="0" data-purecounter-end="@randomNumber" data-purecounter-duration="1" class="purecounter"></span>
                    <p>Rastgele Sayı(10-20 arası)</p>
                </div>
            </div><!-- End Stats Item -->

        </div>

    </div>

</section><!-- /Stats Section -->