@model Portfolio
@{
    ViewData["Title"] = "CreatePortfolio";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>CreatePortfolio</h1>
<form method="post">
<label>Proje Başlığı</label>
<input type="text" asp-for="Title" class="form-control"></input>
<br />

<label>Proje Açıklaması</label>
<input type="text" asp-for="Description" class="form-control"></input>
<br />

<label>Görsel Url</label>
<input type="text" asp-for="ImageUrl" class="form-control"></input>
<br />

<label>Proje Kategorisi</label>
<select asp-for="CategoryId" asp-items="ViewBag.v" class="form-control">
    <option value="">Seçiniz</option>
    
</select>
<br />

<button class="btn btn-primary">Kaydet</button>
</form>