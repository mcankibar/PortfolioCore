@using PortfolioCore.Models
@model List<Portfolio>

@{
    ViewData["Title"] = "PortfolioList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1 class="text-center mb-5">Portfolio Listesi</h1>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100 shadow">
                @if (!string.IsNullOrEmpty(item.ImageUrl))
                {
                    <img src="@item.ImageUrl" class="card-img-top" alt="@item.Title">
                }
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@item.Title</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@item.Category.CategoryName</h6>
                    <p class="card-text">@item.Description</p>
                    <div class="mt-auto d-flex justify-content-between">
                        <a href="/Portfolio/DeletePortfolio/@item.PortfolioId" class="btn btn-danger btn-sm">Sil</a>
                        <a href="/Portfolio/UpdatePortfolio/@item.PortfolioId" class="btn btn-success btn-sm">Güncelle</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>



<style>
    .card:hover {
        transform: scale(1.03);
        transition: all 0.3s ease-in-out;
    }
</style>
